# Server Configuration
PORT=4000
NODE_ENV=development
HOST=localhost

# Security
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:5173  # Vue dev server default port

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# API Configuration
API_PREFIX=/api/v1
API_VERSION=v1

# Compression
COMPRESSION_LEVEL=6  # 0-9, where 9 is maximum compression

# Development
DEV_MODE=true

# Database Configuration
DB_NAME=amazon_scraper
DB_USER=postgres
DB_PASSWORD=postgres  # или ваш текущий пароль для postgres
DB_HOST=localhost
DB_PORT=5432

OPENAI_API_KEY=